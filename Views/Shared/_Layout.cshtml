<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BebuMovies</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap" rel="stylesheet">

    <!-- Custom CSS for font and shadows -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .drop_shadow-lg {
            filter: drop-shadow(0 10px 8px rgb(0 0 0 / 0.04)) drop-shadow(0 4px 3px rgb(0 0 0 / 0.1));
        }
    </style>
</head>
<body class="bg-gradient-to-br from-gray-900 to-gray-800 text-white">
    <div class="container mx-auto p-4 sm:p-8">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-700 footer text-gray-500 text-sm text-center py-4">
        <div class="container mx-auto">
            <p>
                Powered by The Movie Database (TMDB) API.
            </p>
            <p>
                Created by JshMaxer. All rights reserved.
            </p>
        </div>
    </footer>

    <!-- Render section for page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
